<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_card_container"
    android:layout_marginTop="10dp"
    card_view:contentPadding="8dp"
    card_view:cardUseCompatPadding="false"
    android:layout_height="match_parent"
    android:outlineProvider="none"
    card_view:cardBackgroundColor="#FED9D9"
    card_view:cardElevation="0dp"
    card_view:cardMaxElevation="0dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/task_card_title"
                        style="@style/heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />

                    <TextView
                        android:id="@+id/task_card_subject"
                        style="@style/label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#FE0A0A" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/tasK_card_delete_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_trash"
                    card_view:tint="@color/secondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/task_card_time_icon"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    card_view:srcCompat="@drawable/ic_time"
                    card_view:tint="#FE0A0A" />

                <TextView
                    android:id="@+id/task_card_schedule"
                    style="@style/label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>