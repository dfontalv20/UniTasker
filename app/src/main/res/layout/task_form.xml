<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/purple">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="400dp"
        android:layout_height="730dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.516">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView4"
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:text="New Task" />

            <TextView
                android:id="@+id/textView3"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Task Name" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/rounded_edittext_background"
                android:backgroundTint="@color/primary"
                android:backgroundTintMode="add"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView8"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Subject" />

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                app:flexDirection="row"
                app:flexWrap="wrap">

                <Button
                    android:id="@+id/button11"
                    style="@style/Theme.UniTasker.Tag"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:backgroundTint="@color/purple"
                    android:text="Web Development" />

                <Button
                    android:id="@+id/button14"
                    style="@style/Theme.UniTasker.Tag"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:backgroundTint="@color/orange"
                    android:text="Project Management" />

                <Button
                    android:id="@+id/button15"
                    style="@style/Theme.UniTasker.Tag"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:backgroundTint="@color/red"
                    android:text="Machine Learning" />
            </com.google.android.flexbox.FlexboxLayout>


            <TextView
                android:id="@+id/textView12"
                style="@style/label"
                android:layout_width="53dp"
                android:layout_height="17dp"
                android:layout_marginBottom="8dp"
                android:text="Date" />

            <DatePicker
                android:id="@+id/simpleDatePicker2"
                android:layout_width="368dp"
                android:layout_height="148dp"
                android:backgroundTint="@color/primary"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />

            <TextView
                android:id="@+id/textView11"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Hour" />

            <EditText
                android:id="@+id/editTextTextPersonName6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/rounded_edittext_background"
                android:backgroundTint="@color/primary"
                android:backgroundTintMode="add"
                android:ems="10"
                android:inputType="time"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp"
                app:drawableEndCompat="@drawable/ic_time"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.625"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.485" />

            <CheckBox
                android:id="@+id/radioButton"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primary"
                android:text="Assign automatically"
                android:textColorLink="@color/primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.066"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName6" />

            <TextView
                android:id="@+id/textView9"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Duration" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_edittext_background"
                android:backgroundTint="@color/primary"
                android:backgroundTintMode="add"
                android:ems="10"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView10"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="DeadLine" />

            <DatePicker
                android:id="@+id/simpleDatePicker3"
                android:layout_width="368dp"
                android:layout_height="148dp"
                android:backgroundTint="@color/primary"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />

            <CheckBox
                android:id="@+id/radioButton2"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primary"
                android:text="Allow notifications"
                android:textColorLink="@color/primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.066"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName4" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginBottom="28dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3"
                app:layout_constraintVertical_bias="1.0" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>